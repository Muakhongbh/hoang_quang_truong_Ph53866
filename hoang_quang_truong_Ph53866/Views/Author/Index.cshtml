@model IEnumerable<Author>

@{
    ViewData["Title"] = "Danh sách tác giả";
}

<h1>Danh sách tác giả</h1>

<a href="@Url.Action("Create", "Author")" class="btn btn-primary">Thêm tác giả</a>

<table class="table">
    <thead>
        <tr>
            <th>Tên tác giả</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Author", new { id = author.AuthorId })" class="btn btn-warning">Sửa</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@author.AuthorId" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa không?');">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
